{
  "name": "midway-vue3-ssr",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "dependencies": {
    "@midwayjs/bootstrap": "3.7.1",
    "@midwayjs/core": "3.7.0",
    "@midwayjs/decorator": "3.7.0",
    "@midwayjs/info": "3.7.1",
    "@midwayjs/koa": "3.7.1",
    "@midwayjs/logger": "2.17.0",
    "@midwayjs/static-file": "3.7.1",
    "@midwayjs/validate": "3.7.1",
    "pinia": "2.0.23",
    "vue": "3.2.41",
    "vue-router": "4.1.6"
  },
  "devDependencies": {
    "@midwayjs/cli": "1.3.16",
    "@midwayjs/mock": "3.7.1",
    "@rushstack/eslint-patch": "1.2.0",
    "@types/jest": "29.2.0",
    "@types/koa": "2.13.5",
    "@types/node": "16.18.3",
    "@vitejs/plugin-vue": "3.2.0",
    "@vitejs/plugin-vue-jsx": "2.1.0",
    "@vue/eslint-config-prettier": "7.0.0",
    "@vue/eslint-config-typescript": "11.0.2",
    "@vue/tsconfig": "0.1.3",
    "cross-env": "7.0.3",
    "eslint": "8.26.0",
    "eslint-plugin-vue": "9.6.0",
    "jest": "29.2.2",
    "koa-connect": "2.1.0",
    "mwts": "1.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4",
    "vite": "3.2.1",
    "vue-tsc": "1.0.9"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./bootstrap.js",
    "dev": "cross-env NODE_ENV=local midway-bin dev --ts",
    "build": "run-p build:midway build:view",
    "build:midway": "midway-bin build -c",
    "test": "midway-bin test --ts",
    "cov": "midway-bin cov --ts",
    "lint": "run-p lint:midway lint:view",
    "lint:midway": "mwts fix",
    "ci": "npm run cov",
    "dev:view": "vite view",
    "preview:view": "vite view preview --port 4173",
    "build:view": "run-p type-check build-only:view",
    "build-only:view": "run-p build:view:client build:view:server",
    "build:view:client": "vite build view --outDir ../public/client --ssrManifest",
    "build:view:server": "vite build view --outDir ../public/server --ssr src/server",
    "type-check": "vue-tsc -p view/tsconfig.json --noEmit",
    "lint:view": "eslint view -c ./view/.eslintrc.cjs --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix"
  },
  "midway-bin-clean": [
    ".vscode/.tsbuildinfo",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ilyydy/midway-vue3-ssr"
  },
  "author": "anonymous",
  "license": "MIT"
}
